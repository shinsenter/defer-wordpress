{
    "license": "MIT",
    "type": "project",
    "scripts": {
        "fixer": "php-cs-fixer fix --show-progress=estimating --verbose",
        "deploy": [
            "bash ./_dist_/deploy.sh"
        ]
    },
    "require": {
        "php": "^5.6 || ^7.0 || ^8.0",
        "shinsenter/defer.php": "^2.0"
    },
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17"
    }
}
